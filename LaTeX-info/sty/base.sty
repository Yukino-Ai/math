% Theorem environments share the same counter 
\theoremstyle{definition} % Bold title, plain body
\newtheorem{definition}{Definition}[section]
\newtheorem{example}[definition]{Example}
\newtheorem*{solution}{Solution}

\theoremstyle{plain} % Bold title, italic body
\newtheorem{theorem}[definition]{Theorem}
\newtheorem{proposition}[definition]{Proposition}
\newtheorem{corollary}[definition]{Corollary}
\newtheorem{lemma}[definition]{Lemma}

\theoremstyle{remark} % Italic title, plain body
\newtheorem{remark}[definition]{Remark}
\newtheorem{claim}[definition]{Claim}

% https://tex.stackexchange.com/questions/85059/proof-environment-line-break-after-the-proof
\newenvironment{myproof}[1][\proofname]{%
	\begin{proof}[#1]$ $\newline\nobreak\ignorespaces
		}{%
	\end{proof}
}

\newenvironment{mylemma}[1][\lemmaname]{%
	\begin{lemma}[#1]$ $\newline\nobreak\ignorespaces
		}{%
	\end{lemma}
}
